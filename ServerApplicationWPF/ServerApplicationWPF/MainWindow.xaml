<Window x:Class="ServerApplicationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApplicationWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="720" Closed="Window_Closed">
    <Grid Background="#FF7985FF">
        <ScrollViewer Name="MyScrollViewer" Margin="0,166,0,0" Height="150" VerticalAlignment="Bottom">
            <TextBlock x:Name="Log" TextWrapping="Wrap" Background="#FFBAD9FF"/>
        </ScrollViewer>
        <Image x:Name="ImageDisplay" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320" Height="198" />
        <TextBox x:Name="barcode_txt" HorizontalAlignment="Left" Height="24" Margin="500,34,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="625,38,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBlock x:Name="db_output" HorizontalAlignment="Left" Margin="500,63,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
